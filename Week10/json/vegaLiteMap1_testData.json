{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 600,
	"height": 500,
	"view": {
		"fill": "#b6d7e4"
	},
	"params": [
		{
			"name": "SelectedUsage",
			"value": [""]
		}
	],
	"projection": {
		"type": "azimuthalEqualArea",
		"scale": 350000,
		"center": [
			0,
			0
		],
		"rotate": [
			-144.943056,
			37.814167,
			0
		]
	},
	"datasets": {
		"MainData": {
				"url": "cleaned5.csv",
				"format": {
					"type": "csv"
				}				
		},
		"GeoJsonCLUE": {
				"url": "data/small-areas-for-census-of-land-use-and-employment-clue.json",
				"format": {
				  "type": "topojson",
				  "feature": "small-areas-for-census-of-land-use-and-employment-clue"
				}
		}
	},
	"layer": [
		{
			"data": {
				"url": "data/MelbourneWiderArea.json",
				"format": {
					"type": "topojson",
					"feature": "MelbourneWiderArea"
				}
			},
			"mark": {
				"type": "geoshape",
				"stroke": "black",
				"strokeWidth": 0
			},
			"encoding": {
				"color": {
					"value": "#eeeeee"
				}
			}
		},
		{
			"data": {
				"url": "data/rivers.json",
				"format": {
					"type": "topojson",
					"feature": "waterFromOpenStreetMap"
				}
			},
			"mark": {
				"type": "geoshape",
				"stroke": "black",
				"strokeWidth": 0
			},
			"encoding": {
				"color": {
					"value": "#b6d7e4"
				}
			}
		},
		{
			"params": [
				{"name": "SelectedCLUEArea", "select": {"type": "point", "fields": ["CLUESmallArea"]}}
			],
			"data": {
				"url": "cleaned5.csv",
				"format": {
					"type": "csv"
				}				
			},

			"transform": [
				{
					"lookup": "Usage",
					"from": {
						"data": {
							"url": "Space_usage_groupings.json"
						},
						"key": "name",
						"fields": [
							"type"
						]
					}
				},
				{
					"filter": "SelectedUsage[0] == \"\" || indexof(SelectedUsage, datum.type) != -1"
				},
				{
					"aggregate": [
						{
							"op": "sum",
							"field": "SumFloors2002",
							"as": "SumFloors2002"
						},
						{
							"op": "sum",
							"field": "FloorCount2002",
							"as": "FloorCount2002"
						},
						{
							"op": "sum",
							"field": "SumFloors2021",
							"as": "SumFloors2021"
						},
						{
							"op": "sum",
							"field": "FloorCount2021",
							"as": "FloorCount2021"
						}
					],
					"groupby": [
						"CLUESmallArea"
					]
				},
				{
					"calculate": "(datum.FloorCount2021 * datum.SumFloors2002) != 0 || (datum.SumFloors2021 * datum.FloorCount2002) == 0",
					"as": "HasValidValue"
				},
				{
					"calculate": "!datum.HasValidValue ? 0 : (datum.SumFloors2021 * datum.FloorCount2002) == 0 ? 0 : (datum.SumFloors2021 * datum.FloorCount2002) / (datum.FloorCount2021 * datum.SumFloors2002) - 1", "as": "ChangeInAverageFloors"
				},
				{
				  "lookup": "CLUESmallArea",
				  "from": {
					"data": {
						"name": "A",
						"url": "data/small-areas-for-census-of-land-use-and-employment-clue.json",
						"format": {
						  "type": "topojson",
						  "feature": "small-areas-for-census-of-land-use-and-employment-clue"
						}
					},
					"key": "properties.featurenam"
				  },
				  "as": "geo"
				}
			],
			"mark": {
				"type": "geoshape",
				"strokeWidth": 2
			},
			"encoding": {
				"shape": {
					"field": "geo",
					"type": "geojson"
				  },
				"color": {
					"field": "ChangeInAverageFloors",
					"type": "quantitative",
					"legend": {
						"format": "p",
						"title": "Increase in average floor count"
					},
					"scale": {
						"scheme": "redyellowgreen",
						"domain": [-1, 2.5],
						"domainMid": 0
					},
					"condition":{
						"test": "!datum.HasValidValue",
						"value": "#00F" 
					}
				},
				"stroke": {
					"condition": {
					  "param": "SelectedCLUEArea",
					  "empty": false,
					  "value": "black"
					},
					"value": "#bbb"
				},
				"order": {"condition": {"param": "SelectedCLUEArea", "value": 1}, "value": 0},
				"tooltip": [
					{
						"field": "CLUESmallArea",
						"type": "nominal",
						"title": "CLUE Area"
					},
					{
						"field": "ChangeInAverageFloors",
						"type": "quantitative",
						"format": ".2%",
						"title": "Increase in avg. floor count"
					}
				]
			}
		},
		{
			"data": {
				"graticule": {
					"extent": [
						[
							145.05,
							-37.75
						],
						[
							144.85,
							-37.9
						]
					],
					"step": [
						0.025,
						0.025
					]
				}
			},
			"mark": {
				"type": "geoshape",
				"stroke": "#c7c7c7",
				"strokeWidth": 0.5
			},
			"encoding": {
				"color": {
					"value": "#eee"
				}
			}
		},
		{
			"data": {
				"name": "B",
				"url": "data/centroids.csv",
				"format": {
				  "type": "csv"
				}
			},
			"mark": { "type": "text", "lineBreak": " ", "stroke": "#FFF", "strokeOpacity": 0.1},
			"encoding": {
				"longitude": {
				  "field": "lon",
				  "type": "quantitative"
				},
				"latitude": {
				  "field": "lat",
				  "type": "quantitative"
				},
				"text": {
				  "field": "featurenam",
				  "type": "nominal"
				},
				"size": {
				  "value": 11
				},
				"color": {"value": "#000"}
			  }
		}
	]
}